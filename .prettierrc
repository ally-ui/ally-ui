{
	"bracketSpacing": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.vue",
			"options": {
				"organizeImportsSkipDestructiveCodeActions": true
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"organizeImportsSkipDestructiveCodeActions": true
			}
		}
	]
}
