---
import type {Frontmatter} from '../../config';
import MoreMenu from '../RightSidebar/MoreMenu.astro';
import TableOfContents from '../RightSidebar/TableOfContents';
import type {MarkdownHeading} from 'astro';

type Props = {
	frontmatter: Frontmatter;
	headings: MarkdownHeading[];
	githubEditUrl: string;
};

const {frontmatter, headings, githubEditUrl} = Astro.props as Props;
const {title, description, tableOfContentsMaxDepth} = frontmatter;
---

<article id="article" class="max-w-[75ch] wh-full flex flex-col p-8 isolate">
	<section class="mb-16">
		<h1 id="overview" class="mb-2 text-3xl font-semibold tracking-wide">
			{title}
		</h1>
		<sub class="text-lg font-light tracking-wide text-content-sub">
			{description}
		</sub>
		<nav class="my-8 md:hidden">
			<TableOfContents
				client:media="(max-width: 50em)"
				headings={headings}
				maxDepth={tableOfContentsMaxDepth}
			/>
		</nav>
		<div
			class="mt-8 prose dark:prose-invert prose-headings:font-semibold prose-headings:tracking-wide prose-headings:mb-2 prose-h3:mt-6 text-scale"
		>
			<slot />
		</div>
	</section>
	<nav class="md:hidden">
		<MoreMenu editHref={githubEditUrl} />
	</nav>
</article>
