---
interface Props {
	widget: string;
	framework: string;
	viewSourceLabel: string;
	viewOnNpmLabel: string;
}

const {widget, framework, viewSourceLabel, viewOnNpmLabel} = Astro.props;

const links = [
	{
		href: `https://github.com/ally-ui/ally-ui/tree/main/packages/${widget}/${framework}`,
		label: viewSourceLabel,
	},
	{
		href: `https://www.npmjs.com/package/@ally-ui/${framework}-${widget}`,
		label: viewOnNpmLabel,
	},
];
---

<ul class="contents">
	{
		links.map(({href, label}) => (
			<li>
				<a
					href={href}
					target="_blank"
					rel="noreferrer noopener"
					class="flex w-fit items-center gap-1 rounded-md px-1 py-0.5 font-normal no-underline"
				>
					<span class="text-accent">{label}</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="icon icon-tabler icon-tabler-arrow-up-right"
						width="18"
						height="18"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<path stroke="none" d="M0 0h24v24H0z" fill="none" />
						<line x1="17" y1="7" x2="7" y2="17" />
						<polyline points="8 7 17 7 17 16" />
					</svg>
				</a>
			</li>
		))
	}
</ul>
