{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"jsx": "preserve",
    "importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"declaration": true,
		"outDir": "dist",
    "types": ["vite/client", "vitest/globals"]
	}
}
