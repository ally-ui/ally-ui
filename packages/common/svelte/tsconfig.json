{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"strict": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"allowJs": false,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": true,
		"outDir": "dist"
	},
	"include": ["example", "lib"]
}
